@model AccountDetailsViewModel
@{
    Layout = "_Layout";
    ViewData.SetActivePage("Account Settings");
}

<h2 class="mt-1 mb-4">@ViewData["Title"]</h2>
<div class="row">
    <div class="col-xl-8 col-xxl-constrain">
        <form asp-action="UpdateAccountDetail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountEmail" class="form-label" data-required></label>
                <div class="input-group">
                    <input asp-for="AccountEmail" class="form-control" placeholder="" readonly="readonly"/>
                    @* <div class="input-group-append"> *@
                    @*     <a asp-controller="Account" asp-action="ChangeEmail" class="btn btn-secondary">Change Email</a> *@
                    @* </div> *@
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Settings.Github" class="form-label" data-required></label>
                <input asp-for="Settings.Github" class="form-control" placeholder="https://github.com/Kukks" required/>
                <span asp-validation-for="Settings.Github" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Settings.Twitter" class="form-label"></label>
                <input asp-for="Settings.Twitter" class="form-control" placeholder="https://twitter.com/r0ckstardev"/>
                <span asp-validation-for="Settings.Twitter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Settings.Nostr" class="form-label"></label>
                <input asp-for="Settings.Nostr" class="form-control" placeholder="npub1h0dl0dkjp884wz3*********hlvp68v0lfngnscdjsuy8yqm"/>
                <span asp-validation-for="Settings.Nostr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Settings.Email" class="form-label"></label>
                <input asp-for="Settings.Email" class="form-control" type="email" placeholder="plugins@kukks.com"/>
                <span asp-validation-for="Settings.Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" class="btn btn-primary" id="Save" value="Save"/>
            </div>
        </form>
    </div>
</div>
