@model PluginBuilder.ViewModels.CreatePluginViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create a new plugin";
}

<h2 class="mt-1 mb-4">@ViewData["Title"]</h2>
<div class="row">
    <div class="col-xl-8 col-xxl-constrain">
        <form asp-action="CreatePlugin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PluginSlug" class="form-label" data-required></label>
                <input asp-for="PluginSlug" class="form-control" placeholder="my-awesome-plugin" required />
                <span asp-validation-for="PluginSlug" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Tags" class="form-label"></label>
                <input asp-for="Tags" type="text" class="form-control" id="TextSeperator" name="Tags" placeholder="Enter tags, e.g., 'lightning, extension, tool'" />
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary" id="Create" />
            </div>
        </form>
    </div>
</div>

<link href="~/vendor/tom-select/tom-select.bootstrap5.min.css" asp-append-version="true" rel="stylesheet">
<script src="~/vendor/tom-select/tom-select.complete.min.js" asp-append-version="true"></script>
<script src="~/scripts/template-editor.js" asp-append-version="true"></script>
